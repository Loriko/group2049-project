@using BackEndServer.Models.Enums
@using BackEndServer.Models.ViewModels
@model BackEndServer.Models.ViewModels.CameraInformationList
@*@{ Html.RenderPartial("EditCameraInformationModal", Model.CameraList); }*@
<h1 class="page-title center-align">Edit or Add New Cameras</h1>
<div class="row">
    <div class="right-align" style="margin-right: 11px;">
        <a asp-controller="Camera" asp-action="BeginCameraRegistration" id="create_alert_btn" class="btn-floating btn-large green modal-trigger">
            <i class="large material-icons">add</i>
        </a>
    </div>
</div>
<div class="collection">
    @foreach (var camera in Model.CameraList)
    {
        <div class="collection-item">
            <span class="title">@camera.CameraRoomName</span>
            <span class="secondary-content">
                <a href="#"><i class="material-icons">remove_circle</i></a>
                <a href="#" onclick="showEditCameraModal()"><i class="material-icons">edit</i></a>
            </span>
        </div>
    }
</div>

<script>
    function showEditCameraModal() {
        $('#camera-edit-modal').modal("open");
    }
</script>
